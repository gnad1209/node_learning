@model DAWEB.Models.DanhMucSanPham

@{
Layout = null;
Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}


<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>

<body>

    {{> abc}}
    <div class="table main-header" style="width: 80%">
        <h2>Sửa thông tin Kg</h2>
        <form action="/danhmucsanphams/{{danhmucsanphams._id}}?_method=PUT" method="post"></form>
        {
        <div>
            <h5>Tên loại Sản Phẩm</h5>
            @Html.TextBoxFor(m => m.Name)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default IP" />
            </div>
        </div>
        }
        <div
            style="width: 100px; height: 30px; background-color: black; border-radius: 6px; border: 1px solid #000; display: flex; justify-content: center; align-items: center">
            @Html.ActionLink("Quay lại", "DanhMucSanPham", null, new { @style = "color: white; font-weight: 600" })
        </div>
    </div>

</body>

</html>