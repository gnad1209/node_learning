@model DAWEB.Models.DatHang

@{
Layout = null;
Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>edit</title>
    <style>
        div {
            margin-bottom: 10px;
        }

        .IP {
            background-color: #6ebfc2;
            color: #fff;
        }
    </style>
</head>

<body>
    {{> abc}}
    <div class="table main-header" style="width: 80%">

        @using (Html.BeginForm("Edit", "ThongKe", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>xác nhận</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label class="control-label col-md-2">Trạng Thái </label>
                <div class="col-md-10">
                    @Html.DropDownList("IdTrangThai", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdTrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                <label class="control-label col-md-2">ID Sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdSanPham, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdSanPham, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="control-label col-md-2">ID Sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThoiGianDat, new { htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.ThoiGianDat, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="control-label col-md-2">ID Sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" @*style="display:none" *@>
                <label class="control-label col-md-2">Địa chỉ </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="control-label col-md-2">Số lượng</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="control-label col-md-2">Tổng tiền</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default IP" />
                </div>
            </div>
        </div>
        }

        <div
            style="width: 100px; height: 30px; background-color: black; border-radius: 6px; border: 1px solid #000; display: flex; justify-content: center; align-items: center">
            @Html.ActionLink("Quay lại", "Index", null, new { @style = "color: white; font-weight: 600" })
        </div>

    </div>
</body>

</html>