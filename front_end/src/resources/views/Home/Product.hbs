{{> header}}

<div style="height: 98px;width: 100%;background-color: #353535;">

</div>
<div class="body">
    <div class="body_main">
        <div class="body_top">
            <div class="top-contentleft" style="width:80%">
                <a class="top-contentleft_text" href="/">TRANG CHỦ</a>
                <p> &nbsp; / &nbsp;&nbsp; </p>
                <a class="top-contentleft_text" href="/products" style="color: black;"><b>CỬA HÀNG</b></a>
            </div>
            <div class="top-contentright">
                <div>
                    <form  method="get" action="/products/search">
                        <div style="display:flex;justify-content:space-between;align-items:center">
                            <label>Tìm kiếm sản phẩm: </label>
                                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="body_main_bt">
        <div class="right_item">
            <div class="item_SP">
                {{#each sanphams}}
                <div class="frames_box">
                    <div class="box_img">
                        <a href="http://localhost:3000/detail/{{this.slug}}">
                            <img src="/{{this.images}}" alt="logo" class="frames_box_img">
                        </a>
                    </div>
                    <div class="frames_text" style="color:black">
                        <p>{{this.name}}</p>
                    </div>
                    <div class="frames_text_price">
                        <p>{{this.gia}}₫</p>
                    </div>
                    <div style="margin-top: 30px; text-align: center;">
                        <a href="http://localhost:3000/bagcart/{{this.slug}}" class="frames_button_buy">THÊM VÀO GIỎ</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</div>